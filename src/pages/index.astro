---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import { getListPage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import CallToAction from "@/partials/CallToAction.astro";
import Testimonial from "@/partials/Testimonial.astro";
import BrewerSpotlight from "@/partials/BrewerSpotlight.astro";
import { FaCheck } from "react-icons/fa";
import ContactUs from "@/components/ContactUs.astro";
import CountDown from "@/components/CountDown.astro";
import PhotoGallery from "@/partials/PhotoGallery.astro";

const homepage = await getListPage("homepage", "-index");
const call_to_action = await getListPage("ctaSection", "call-to-action");
const testimonial = await getListPage("testimonialSection", "testimonial");
const photoGallary = await getListPage("imageGallarySection", "image-gallary");
const brewerSpotlight = await getListPage(
  "brewerSpotlightSection",
  "brewer-spotlight",
);
const { banner, countdown } = homepage.data;
---

<Base>
  <!-- Banner -->
  <section class="section pt-14 pb-0">
    <div class="container border-blue-500">
      <div class="row justify-center">
        <div class="lg:col-7 md:col-9 mb-8 text-center">
          <h1
            set:html={markdownify(banner.title)}
            class="mb-4 text-h3 lg:text-h1"
          />
          <p
            set:html={markdownify(banner.content)}
            class="mb-8"
            style="border-blue-500 border-opacity-100"
          />
          {
            banner.button.enable && (
              <a
                class="btn btn-primary"
                href={banner.button.link}
                target={
                  banner.button.link.startsWith("http") ? "_blank" : "_self"
                }
                rel="noopener"
              >
                {banner.button.label}
              </a>
            )
          }
        </div>
      </div>
    </div>
  </section>

  <PhotoGallery photoGallary={photoGallary} />

  <Testimonial testimonial={testimonial} />

  <BrewerSpotlight brewerSpotlight={brewerSpotlight} />

  <section class="section pt-8 pb-0">
    <div class="container">
      <div class="row justify-center">
        <ContactUs />
      </div>
    </div>
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="row justify-center">
        <CountDown
          image={countdown.image}
          title={countdown.title}
          date={countdown.date}
          link={countdown.link}
        />
      </div>
    </div>
  </section>
</Base>
