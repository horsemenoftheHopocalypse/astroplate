---
import OfficerCard from "@/components/OfficerCard.astro";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import PageHeader from "@/partials/PageHeader.astro";

const officerIndex = await getListPage("officers", "-index");

if (officerIndex.data.draft) {
  return Astro.redirect("/404");
}

const officers = await getSinglePage("officers");
---

<Base title={officerIndex.data.title}>
  <PageHeader title={officerIndex.data.title} />
  <section class="section-sm pb-0 pt-0">
    <div class="container">
      <div class="row justify-center">
        {
          officers.map((officer) => (
            <div class="mb-14 md:col-6 lg:col-4">
              <OfficerCard data={officer} />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
